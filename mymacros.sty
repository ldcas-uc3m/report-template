\ProvidesPackage{mymacros}[Auxiliary helper macros for the report]


% FIGURES

% \rasterfigure[width]{filename}{caption}
\newcommand{\rasterfigure}[3][0.7] {
  \begin{figure}[htbp]
    \centering
    \includegraphics[width=#1\textwidth]{#2}
    \caption{#3}
    \label{fig:#2}
  \end{figure}
}

% \svgfigure[width]{filename}{caption}
\newcommand{\svgfigure}[3][0.7] {
  \begin{figure}[htbp]
    \centering
    \includesvg[inkscapelatex=false,width=#1\textwidth]{#2}
    \caption{#3}
    \label{fig:#2}
  \end{figure}
}


% REFERENCES

\RequirePackage{nameref}

% \chapref{mychap}
% remember to create a label for the section (\label{chap:mychap})
\newcommand{\partref}[1] {%
  Parte \ref{chap:#1}, \textit{\nameref{part:#1}}%
}

% \secref{mysec}
% remember to create a label for the section (\label{sec:mysec})
\newcommand{\secref}[1] {%
  Sección \ref{sec:#1}, \textit{\nameref{sec:#1}}%
}

% \subsecref{mysubsec}
% remember to create a label for the subsection (\label{subsec:mysubsec})
\newcommand{\subsecref}[1] {%
  Subsección \ref{subsec:#1}, \textit{\nameref{subsec:#1}}%
}

% \appref{myapp}
% remember to create a label for the appendix (\label{app:myapp})
\newcommand{\appref}[1] {%
  Apéndice \ref{app:#1}, \textit{\nameref{app:#1}}%
}

% \tabref{mytab}
% remember to create a label for the table (\label{tab:mytab})
\newcommand{\tabref}[1]{Tabla \ref{tab:#1}}

% \figref{myfig}
% remember to create a label for the figure (\label{fig:myfig})
\newcommand{\figref}[1] {Figura \ref{fig:#1}}


% EXTRA

% \footurl{url}
\newcommand{\footurl}[1]{\footnote{\url{#1}}}
